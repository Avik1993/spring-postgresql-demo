#!groovy

pipeline {
 agent any
 stages {
  stage('Checkout') {
   steps {
    git changelog: true, poll: false,
     url: 'https://github.com/garystafford/spring-postgresql-demo'
   }
  }
  stage('Test') {
   steps {
    dir('postman') {
     nodejs('nodejs') {
      sh 'sh newman-test-uat.sh'
     }
     junit '**/newman/*.xml'
    }
   }
  }
 }
}
